# ============================================
# SERVER CONFIGURATION
# ============================================
NODE_ENV=production
PORT=3000
API_PREFIX=api
API_VERSION=v1

# ============================================
# TIMEZONE CONFIGURATION
# ============================================
# CRITICAL: Must match simulator timezone
TZ=Asia/Jakarta
TIMEZONE=Asia/Jakarta

# ============================================
# FIREBASE CONFIGURATION (REQUIRED)
# ============================================
FIREBASE_PROJECT_ID=your-project-id
FIREBASE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nYOUR_PRIVATE_KEY_HERE\n-----END PRIVATE KEY-----\n"
FIREBASE_CLIENT_EMAIL=firebase-adminsdk-xxxxx@your-project.iam.gserviceaccount.com
FIREBASE_REALTIME_DB_URL=https://your-project-default-rtdb.asia-southeast1.firebasedatabase.app/

# Optional: Firestore settings
FIRESTORE_MAX_IDLE_CHANNELS=5

# ============================================
# JWT CONFIGURATION (REQUIRED)
# ============================================
# CRITICAL: Must be at least 32 characters (64+ recommended for production)
JWT_SECRET=your-super-secret-jwt-key-at-least-32-characters-long
JWT_EXPIRATION=7d
JWT_ISSUER=binary-trading-api
JWT_AUDIENCE=binary-trading-users

# ============================================
# CORS CONFIGURATION
# ============================================
# Multiple origins: separate with commas
CORS_ORIGIN=https://yourdomain.com,http://localhost:3000,http://localhost:5173
CORS_CREDENTIALS=true
CORS_MAX_AGE=86400

# ============================================
# RATE LIMITING
# ============================================
# Default rate limit
RATE_LIMIT_TTL=60
RATE_LIMIT_LIMIT=100

# Strict rate limit (for auth endpoints)
RATE_LIMIT_STRICT_TTL=60
RATE_LIMIT_STRICT_LIMIT=10

# ============================================
# LOGGING CONFIGURATION
# ============================================
LOG_LEVEL=info
ENABLE_FILE_LOGGING=false
LOG_FILE_PATH=./logs

# ============================================
# SUPER ADMIN CONFIGURATION (REQUIRED)
# ============================================
SUPER_ADMIN_EMAIL=superadmin@yourdomain.com
SUPER_ADMIN_PASSWORD=YourSecurePassword123!

# ============================================
# PERFORMANCE TUNING
# ============================================
# Request timeouts (milliseconds)
REQUEST_TIMEOUT=3000
BINARY_ORDER_TIMEOUT=2000
PRICE_TIMEOUT=1500
HEALTH_TIMEOUT=800
AUTH_TIMEOUT=5000

# Cache settings
CACHE_ENABLED=true
CACHE_TTL=30000

# Connection pool
CONNECTION_POOL_SIZE=3

# ============================================
# TRADING CONFIGURATION
# ============================================
# Settlement interval (ms)
SETTLEMENT_INTERVAL=1000

# Minimum order amounts (in currency)
MIN_ORDER_AMOUNT_REAL=1000
MIN_ORDER_AMOUNT_DEMO=1000

# Initial balances
INITIAL_REAL_BALANCE=0
INITIAL_DEMO_BALANCE=10000000

# ============================================
# AFFILIATE CONFIGURATION
# ============================================
AFFILIATE_COMMISSION_STANDARD=25000
AFFILIATE_COMMISSION_GOLD=100000
AFFILIATE_COMMISSION_VIP=400000

# ============================================
# CRYPTO CONFIGURATION (BINANCE)
# ============================================
CRYPTO_ENABLED=true

# Binance API (FREE tier - no API key needed)
BINANCE_BASE_URL=https://api.binance.com/api/v3
BINANCE_CACHE_TTL=500
BINANCE_TIMEOUT=8000

# Crypto scheduler
CRYPTO_SCHEDULER_INTERVAL=1000
CRYPTO_SCHEDULER_ENABLED=true

# ============================================
# HEALTH CHECK CONFIGURATION
# ============================================
HEALTH_CHECK_ENABLED=true
HEALTH_ENDPOINT=/health

# Thresholds
MEMORY_THRESHOLD=0.9
RESPONSE_TIME_THRESHOLD=1000

# ============================================
# SECURITY CONFIGURATION
# ============================================
CSP_ENABLED=false
BCRYPT_ROUNDS=10

# Password requirements
MIN_PASSWORD_LENGTH=8
REQUIRE_UPPERCASE=true
REQUIRE_LOWERCASE=true
REQUIRE_NUMBERS=true
REQUIRE_SPECIAL_CHARS=true

# ============================================
# MONITORING & ALERTING (OPTIONAL)
# ============================================
MONITORING_ENABLED=false

# Alert settings
ALERT_HIGH_MEMORY=false
ALERT_SLOW_RESPONSE=false
ALERT_HIGH_ERROR_RATE=false

# Notification endpoints
SLACK_WEBHOOK_URL=
ALERT_EMAIL=

# ============================================
# FEATURE FLAGS
# ============================================
ENABLE_GOOGLE_SIGNIN=true
ENABLE_AFFILIATE=true
ENABLE_CRYPTO=true
ENABLE_DEMO=true
ENABLE_PROFILE_UPLOAD=true