# Server
NODE_ENV=development
PORT=3000
API_PREFIX=api
API_VERSION=v1

# Firebase Firestore
FIREBASE_PROJECT_ID=your-project-id
FIREBASE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nYOUR_PRIVATE_KEY\n-----END PRIVATE KEY-----\n"
FIREBASE_CLIENT_EMAIL=firebase-adminsdk@your-project-id.iam.gserviceaccount.com

# Firebase Realtime Database (for IDX_STC data)
FIREBASE_REALTIME_DB_URL=https://your-project-id-default-rtdb.asia-southeast1.firebasedatabase.app/

# JWT
JWT_SECRET=change-this-to-secure-random-string-min-32-chars
JWT_EXPIRATION=7d

# Security
CORS_ORIGIN=http://localhost:3000,http://localhost:3001
RATE_LIMIT_TTL=60
RATE_LIMIT_LIMIT=100

# Logging
LOG_LEVEL=debug

# Initial Super Admin
SUPER_ADMIN_EMAIL=superadmin@trading.com
SUPER_ADMIN_PASSWORD=SuperAdmin123!
